{
    "family": "rpscrape-full-refresh",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "8192",
    "memory": "40000",
    "executionRoleArn": "arn:aws:iam::249959970268:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::249959970268:role/ecs-service-role",
    "containerDefinitions": [
        {
            "name": "rpscrape-full-refresh",
            "image": "249959970268.dkr.ecr.eu-west-1.amazonaws.com/rpscrape_full_refresh:latest",
            "essential": true,
            "command": ["/app/RPScraper/scripts/full_refresh.sh"],
            "environment": [
                {
                    "name": "AWS_DEFAULT_REGION",
                    "value": "eu-west-1"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/rpscrape-full-refresh",
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
